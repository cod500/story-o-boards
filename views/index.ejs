            appId: "1:326044371137:web:00f610cc2aefebeb72ec40"
        };

        // Initialize Firebase
        const app = initializeApp(firebaseConfig);

        import { getDatabase, ref, set, get, child, update, remove } from "https://www.gstatic.com/firebasejs/9.9.1/firebase-database.js";

        const db = getDatabase();
        const firebaseRef = ref(db, "notes/");

        get(firebaseRef).then((snapshot) => {
            snapshot.forEach((child) => {
                let sticky = $(`<div class='note draggable' id=${child.val().noteId} style='top:${child.val().top}px;left:${child.val().left}px;' ><div class='text'><div class='avatar-upload'><input id='input-url'class='input-url' type='text'placeholder='Enter an image URL and press enter!' /><div class='avatar-edit'><label for='imageUpload'></label></div><div class='avatar-preview'><img id='image-preview' class='image-preview'src=${child.val().image} /></div></div><textarea class='cnt' placeholder='Enter text here...'>${child.val().note}</textarea></div><button class="btn btn-danger delete-note reg">Delete</button>
            <button class="btn btn-success update-note log">Save</button></div>`);
                $("#board").append(sticky);
                $(".draggable").draggable();
                window.addImage();
                window.dragImage();
                updateNotes();
                deleteNotes();
                $(`#${child.val().noteId}`).offset({ top: child.val().top, left: child.val().left })
            });
        }).catch((error) => {
            console.error(error);
        });

        const saveNotes = function () {
            $(".save-note").each(function (index) {
                $(this).on('click', function (event) {
                    event.stopPropagation();
                    event.stopImmediatePropagation();
                    let image = $(this).parent().find('img').attr('src');
                    let note = $(this).parent().find('textarea').val();
                    let id = $(this).parent().attr('id');
                    let position = $(`#${id}`).position();

                    set(ref(db, "notes/" + id), {
                        noteId: id,
                        note: note,
                        image: image,
                        left: position.left,
                        top: position.top
                    })
                        .then(() => {
                            // alert("note saved successfully");
                            alert(id);

                        })
                        .catch((error) => {
                            alert("unsuccessful " + error);

                        });
                })
            });
        }

        function updateNotes() {
            $(".update-note").on('click', function (event) {
                event.stopPropagation();
                event.stopImmediatePropagation();
                let image = $(this).parent().find('img').attr('src');
                let note = $(this).parent().find('textarea').val();
                let id = $(this).parent().attr('id');
                let position = $(`#${id}`).position();

                update(ref(db, "notes/" + id), {
                    note: note,
                    image: image,
                    left: position.left,
                    top: position.top
                })
                    .then(() => {
                        alert(id);
                    })
                    .catch((error) => {
                        alert("unsuccessful " + error)
                    });
            })
        }

        function deleteNotes() {
            $(".delete-note").on('click', function (event) {
                event.stopPropagation();
                event.stopImmediatePropagation();
                let id = $(this).parent().attr('id');

                remove(ref(db, "notes/" + id), {
                })
                    .then(() => {
                        $(`#${id}`).css('visibility', 'hidden');
                    })
                    .catch((error) => {
                        alert("unsuccessful " + error)
                    });


            })

        }

        window.saveNotes = saveNotes;
        window.deleteNotes = deleteNotes;
    </script>
